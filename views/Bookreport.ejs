<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<style>
    h1 {
text-align: center;
margin-top:10px;
margin-bottom:30px;
}
</style>
<body  style="background-color:lavenderblush">
    <div>
        <h1 style="font-family:Trebuchet MS; font-size:50px;">Book Records</h1>
    </div>
    <div class="container">
        <table class="table table-bordered table-border text-center shadow" style="background-color:white">
            <tr>
                <th> Book id</th>
                <th> Book Name</th>
                <th> Book Detail</th>
                <th> Book Author</th>
                <th> Publication</th>
                <th> Price</th>
                <th> Quantity</th>
                <th> Branch</th>
            </tr>
            <% addbook.forEach(function(use){ %>
            <tr>
                <td><%= use.Book_id %></td>
                <td><%= use.Book_name %></td>
                <td><%= use.Book_detail %></td>
                <td><%= use.Author %></td>
                <td><%= use.Publication %></td>
                <td><%= use.Price %></td>
                <td><%= use.Quantity %></td>
                <td><%= use.Branch %></td>
                <td><a href ="/deletebook/<%= use.Book_id %>" class="btn btn-danger btn-sm">delete</a></td>
                <td><a href ="/Bookedit/<%= use.Book_id%>" class="btn btn-success btn-sm">edit</a></td>           
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>