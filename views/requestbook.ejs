<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<style>
    h1 {
text-align: center;
margin-top:50px;
margin-bottom:50px;
}
</style>
<body style="background-color:lavenderblush">
    <div>
        <h1 style="font-family:Trebuchet MS; font-size:50px;">Issue Book Request</h1>
    </div>
    <div class="container"  style="background-color:white">
        <table class="table table-bordered table-border text-center shadow">
            <tr>
                <th> Book Name</th>
                <th> Book Detail</th>
                <th> Book Author</th>
                <th> Branch</th>
                <th> Price</th>
            </tr>
            <% addbook.forEach(function(use){ %>
            <tr>
                <% if (use.Book_available != 0) { %>
                <td><%= use.Book_name %></td>
                <td><%= use.Book_detail %></td>
                <td><%= use.Author %></td>
                <td><%= use.Branch %></td>
                <td><%= use.Price %></td>
                <td><a href ="/bookrequestUser/<%= use.Book_name %>" class="btn btn-danger btn-sm">Request Book</a></td>
                <% } %>         
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>