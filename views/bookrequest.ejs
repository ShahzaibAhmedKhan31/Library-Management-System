<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<style>
    h1 {
text-align: center;
margin-top:10px;
margin-bottom:50px;
}
</style>
<body style="background-color:lavenderblush">
    <div>
        <h1 style="font-family:Trebuchet MS; font-size:50px;">Book Requests</h1>
    </div>
    <div class="container">
        <table class="table table-bordered table-border text-center shadow" style="background-color:white">
            <tr>
                <th> User id</th>
                <th> User name</th>
                <th> Book name</th>
                <th> User type</th>
            </tr>
            <% request_book.forEach(function(use){ %>
            <tr>
                <td><%= use.User_id %></td>
                <td><%= use.User_name %></td>
                <td><%= use.Book_name %></td>
                <td><%= use.User_type %></td>
                <td><a href ="/deleterequest/<%= use.id %>" class="btn btn-danger btn-sm">Request Accepted</a></td>        
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>