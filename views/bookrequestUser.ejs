<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<div class ="container">
    <% addbook.forEach(function(userr){   %>
    <form method="POST" action="/Bookrequest/<%= userr.Book_name %>" autocomplete="off">
        <div class ="form-group">
            <label><b>Book Name:</b></label>
            <input type="text" name="Bname" class="form-control" value="<%= userr.Book_name %>">
        </div>
        <div class ="form-group">
            <label><b>Book Detail:</b></label>
            <input type="text" name="bookdetail" class="form-control" value="<%= userr.Book_detail %>">
        </div>
        <div class ="form-group">
            <label><b>Book Author:</b></label>
            <input type="text" name="bookauthor" class="form-control" value="<%= userr.Author %>">
        </div>
        <div class ="form-group">
            <label><b>Price:</b></label>
            <input type="number" name="bookprice" class="form-control" value="<%= userr.Price %>">
        </div>
        <div class ="form-group">
            <label><b>Branch:</b></label>
            <input type="text" name="branch" class="form-control" value="<%= userr.Branch %>">
        </div>
        <input type="submit" style="margin-top: 20px;" name="Request Book" value="Request Book" class="btn btn-success">
    </form>
    <% }) %>    
</div>
</body>
</html>