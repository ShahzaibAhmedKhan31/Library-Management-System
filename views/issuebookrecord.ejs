<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<style>
    h1 {
text-align: center;
margin-top:10px;
margin-bottom:50px;
}
</style>
<body style="background-color:lavenderblush">
    <div>
        <h1 style="font-family:Trebuchet MS; font-size:50px;">Issued Book Records</h1>
    </div>
    <div class="container" style="background-color:white">
        <table class="table table-bordered table-border text-center shadow">
            <tr>
                <th> id</th>
                <th> User id</th>
                <th> Issue book name</th>
                <th> Issue days</th>
                <th> Issue date</th>
                <th> Issue return date</th>
            </tr>
            <% issuebookrecord.forEach(function(use){ %>
            <tr>
                <td><%= use.id %></td>
                <td><%= use.user_id %></td>
                <td><%= use.issuebook_name %></td>
                <td><%= use.issue_days %></td>
                <td><%= use.issue_date %></td>
                <td><%= use.issue_return %></td>
                <td><a href ="/deleteissuerecord/<%= use.id %>" class="btn btn-danger btn-sm">delete</a></td>          
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>