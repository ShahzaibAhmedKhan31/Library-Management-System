<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<style>

form{
  margin-left: 550px;
}
  h1 {
text-align: center;
margin-top:10px;
margin-bottom:50px;
}
</style>
<body style="background-color:lavenderblush">
  <div>
      <h1 style="font-family:Trebuchet MS; font-size:50px;"> Issue Book</h1>
  </div>
<div class ="container"  style="background-color:white">
  <form method="POST" action="/issuebook" autocomplete="off">
    <br><br>
    <label for ="typw"><b>Choose Book:</b></label>
    <select name="type">
      <% results1.forEach(function(use){ %>    
        <% if (use.Book_available != 0) { %>
          <option value=<%= use.Book_name %>><%= use.Book_name %></option>
        <% } %>
      <% }); %> 
    </select>
    <br><br>
    <label for ="typw"><b>Choose User: </b></label>
    <select name="user">
    <% results2.forEach(function(user){ %>    
        <option value=<%= user.id %> > <%= user.name %></option>
           
    <% }); %> 
    </select>    
    <br><br>
    <div>
      <label><b>Days:</b></label>
      <input type="number" name="days">                          
    <br><br>
    <input type="submit" name="insert" style="margin-top: -20spx;" value="Insert" class="btn btn-primary">
    </div>
</form>
</div>
</body>
</html>

