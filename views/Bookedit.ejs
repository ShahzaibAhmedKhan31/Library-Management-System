<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<div class ="container">
    <% addbook.forEach(function(userr){   %>
    <form method="POST" action="/Bookupdate/<%= userr.Book_id %>" autocomplete="off">
        <div class ="form-group">
            <label><b>Book Name:</b></label>
            <input type="text" name="Bname" class="form-control" value="<%= userr.Book_name %>">
        </div>
        <div class ="form-group">
            <label><b>Detail</b></label>
            <input type="text" name="bookdetail" class="form-control" value="<%= userr.Book_detail %>">
        </div>
        <div class ="form-group">
            <label><b>Author:</b></label>
            <input type="text" name="bookauthor" class="form-control" value="<%= userr.Author %>">
        </div>
        <div class ="form-group">
            <label><b>Publication:</b></label>
            <input type="text" name="bookpub" class="form-control" value="<%= userr.Publication %>">
        </div>
        <div class ="form-group">
            <label><b>Price:</b></label>
            <input type="number" name="bookprice" class="form-control" value="<%= userr.Price %>">
        </div>
        <div class ="form-group">
            <label><b>Quantity:</b></label>
            <input type="number" name="bookquantity" class="form-control" value="<%= userr.Quantity %>">
        </div>
        <div class ="form-group">
            <p style="margin-top: 5px;">Branch:</p>
        <div>
            <input type="radio"name="branch" value="IT" checked>
            <label for="IT">IT</label>
        </div>
        <div>
            <input type="radio" name="branch" value="CIVIL" checked>
            <label for="CIVIL">CIVIL</label>
        </div>
        <div>
            <input type="radio" name="branch" value="EC" checked>
            <label for="EC">EC</label>
        </div>
        <div>
            <input type="radio" name="branch" value="ELECTRICAL" checked>
            <label for="ELECTRICAL">ELECTRICAL</label>
        </div>
        <div class ="form-group">
            <label style="margin-top: 30px"><b>Book_Available:</b></label>
            <input type="number" name="bookava" class="form-control" value="<%= userr.Book_available %>">
        </div>
        <div class ="form-group">
            <label><b>Book_rent:</b></label>
            <input type="number" name="bookrent" class="form-control" value="<%= userr.Book_rent %>">
        </div>        
        </div>      
        <input type="submit" style="margin-top: 20px;" name="update" value="update" class="btn btn-success">
    </form>
    <% }) %>    
</div>
</body>
</html>